.question_4{
  width: 100%;
  height: 8500rpx;
  background:	#FAFAD2;
  background-size: 100% 100%;
  padding-top: 60rpx;
}
.question_4 .question_txt{
    padding-top: 64rpx;
    text-align: center;
    font-size: 48rpx;
    font-family: Helvetica;
    color: #FFFFFF;
    line-height: 58rpx;
}
.question_4 .ask_question{
  width: 639rpx;
  height: 8380rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(13,46,139,0.39);
  border-radius: 16rpx;

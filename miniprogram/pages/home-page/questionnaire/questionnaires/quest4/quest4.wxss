.question_4 .ques_title{
  text-align: center;
  font-size: 35rpx;
  margin-bottom: 50rpx;
}

.question_4 .ask_question .ask_question_item{
  margin-bottom: 80rpx;
}
.question_4 .ask_question .ask_question_item .title{
  font-size: 32rpx;
  font-family: Helvetica;
  color: #333333;
  line-height: 38rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
}
.question_4 .ask_question .ask_question_item .title .left{
  float: left;
  width: 58rpx;
  text-align: left;
}
.question_4 .ask_question .ask_question_item .title .right{
  float: left;
  width: 58rpx;
  text-align: left;
  width: 481rpx;
}
.question_list .question_list_item{
  overflow: hidden;
  width: 540rpx;
  margin-bottom: 8rpx;
}
.question_list .left{
  text-align: center;
  height: 64rpx;
  float: left;
}
.question_list .left .yuan{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  background: #EEEEEE;
  display: inline-block;
  margin-left: 6rpx;
  margin-top: 16rpx;
  margin-right: 16rpx;
}
.question_list .right{
  font-size: 28rpx;
  font-family: Helvetica;
  color: #333333;
  line-height: 34rpx;
  float: left;
  padding-top: 16rpx;
  padding-bottom: 15rpx;
}
/*radio未选中时样式 */
radio .wx-radio-input{
  width: 0rpx;
  height: 0rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 0;
  background: #EEEEEE;
  }
  
  radio{
    width: 100%;
    border-radius: 10rpx;
  }
  radio[aria-checked="true"] .left .yuan{
    background: #0253BE;
  }
  radio[aria-checked="true"] {
    background: #D3DEFF;
  }
  radio .wx-radio-input.wx-radio-input-checked {
    background: #0253BE !important;
    border-color:#0253BE !important;
    width: 0rpx!important;
    height: 0rpx!important;
  }
  radio .wx-radio-input.wx-radio-input-checked::before {
    width: 0rpx!important;
    height: 0rpx!important;
    line-height: 0rpx;
    text-align: center;
    font-size: 0rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}
.place-holder{
  font-size: 32rpx;
  color: #ccc;
}
.textarea_box{
  width: 539rpx;
  height: 212rpx;
  background: #EEEEEE;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 16rpx;
}  
.textarea_box .textarea{

<!-- pages/person/home/home.wxml -->
<scroll-view scroll-y class="scrollPage" refresher-enabled="{{true}}" bindrefresherrefresh="refresh"
             refresher-triggered="{{hasRefresh}}">
  <view class="UCenter-bg">
    <button bind:tap="onGetUserProfile" class="userinfo-avatar"
            style='background-image: url({{userInfo ? userInfo._avatarUrl : "https://myblog-figure-bed-1258528016.file.myqcloud.com/PicGo/20210102232628.png"}})'
            size="default"></button>
    <view class="text-xl">
      {{userInfo.nickName}}
      <block wx:if="{{isVip}}">
        <image
            src="data:image/png;base64,"
            style="width: 35rpx;height: 35rpx"></image>
      </block>
      <text class="text-df">{{userInfo.province}}</text>
    </view>
    <view class="margin-top-sm">
      <text></text>
    </view>
    <image src="https://myblog-figure-bed-1258528016.file.myqcloud.com/PicGo/20210320153840.gif" mode="scaleToFill"
           class="gif-wave"></image>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="accountSetting" data-link="">
        <van-icon name="setting-o" color="orange" custom-style="margin-right: 10px;"/>
<!--        <text class="cuIcon-settings text-orange"></text>-->
        <text class="text-grey">账号设置</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="privacyAgreement" data-link="">
        <van-icon name="orders-o" color="olive" custom-style="margin-right: 10px;"/>
<!--        <text class="cuIcon-text text-olive"></text>-->
        <text class="text-grey">隐私协议</text>
      </view>
    </view>
    <!--    <view class="cu-item arrow">-->
    <!--      <view class="content" bind:tap="switchTheme">-->
    <!--        <text class="cuIcon-clothes text-yellow"></text>-->
    <!--        <text class="text-grey">切换主题</text>-->
    <!--      </view>-->
    <!--    </view>-->
    <view class="cu-item arrow">
      <view class="content" bind:tap="newVersionUpdate">
        <van-icon name="newspaper-o" color="green" custom-style="margin-right: 10px;"/>
<!--        <text class="cuIcon-formfill text-green"></text>-->
        <text class="text-grey">版本更新</text>
        <text class="text-grey version-detail">v0.0.3</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="appreciateSupport">
        <van-icon name="good-job-o" color="red" custom-style="margin-right: 10px;"/>
<!--        <text class="cuIcon-appreciatefill text-red"></text>-->
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <van-icon name="service-o" color="cyan" custom-style="margin-right: 10px;"/>
<!--        <text class="cuIcon-writefill text-cyan"></text>-->
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
  </view>
  <view class='cu-tabbar-height'></view>
</scroll-view>
